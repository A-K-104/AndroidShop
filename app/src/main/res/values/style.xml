<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="text_box_default_stroke">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/x_small_125</item>
    </style>

    <style name="small_text_box">
        <item name="android:layout_height">@dimen/normal_150</item>
        <item name="android:layout_width">@dimen/xlarge_200</item>
        <item name="android:background">@color/dark_green</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/normal_text_100</item>
    </style>

    <style name="large_text_box">
        <item name="android:layout_height">@dimen/xlarge_125</item>
        <item name="android:layout_width">@dimen/xlarge_200</item>
        <item name="android:background">@color/dark_green</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/normal_text_100</item>
    </style>

    <style name="medium_image_view">
        <item name="android:layout_width">@dimen/xlarge_150</item>
        <item name="android:layout_height">@dimen/xlarge_150</item>
        <item name="android:background">@color/dark_green</item>
    </style>

    <style name="small_icon_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/x_small_125</item>
        <item name="android:layout_marginTop">@dimen/x_small_125</item>
        <item name="android:background">@drawable/button_shape_base</item>

    </style>
</resources>