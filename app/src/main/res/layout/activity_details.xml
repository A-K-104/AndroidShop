<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/bBack"
            style="@style/small_icon_button"
            android:src="@drawable/ic_baseline_arrow_back_ios_24" />

        <com.google.android.material.card.MaterialCardView
            style="@style/text_box_default_stroke"
            app:cardCornerRadius="@dimen/xlarge_125"
            app:strokeColor="@color/green"
            app:strokeWidth="@dimen/x_small_100">

            <ImageView
                android:id="@+id/iv_product_icon"
                style="@style/medium_image_view" />
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            style="@style/text_box_default_stroke"
            app:strokeColor="@color/green"
            app:strokeWidth="@dimen/x_small_100">

            <TextView
                android:id="@+id/tName"
                style="@style/small_text_box" />
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            style="@style/text_box_default_stroke"
            app:strokeColor="@color/green"
            app:strokeWidth="@dimen/x_small_100">

            <TextView
                android:id="@+id/tDescription"
                style="@style/large_text_box" />
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            style="@style/text_box_default_stroke"
            app:strokeColor="@color/green"
            app:strokeWidth="@dimen/x_small_100">

            <TextView
                android:id="@+id/tPrice"
                style="@style/small_text_box" />
        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
